{% extends '_base.twig' %}
{% block adminregister %}
		{% if edit %}
			<input type='hidden' id='editar-update' data-editype="usuario">
			<input type="hidden" class="form-control" id="id"  value="{{user.id}}"   >
		{% endif %}
		<!-- MAIN -->
		<div class="main">
			<!-- MAIN CONTENT -->
			<div class="main-content">
				<div class="container-fluid">
					<div class='row' id='form-container' data-class='usuario'>
						<div class='col-md-6'>
							<div class="panel todo-list">
								<div class="panel-heading">
									<h3 class="panel-title">Datos Personales</h3>
									<div class="right">
										<button type="button" class="btn-toggle-collapse"><i class="lnr lnr-chevron-up"></i></button>
										{#<button type="button" class="btn-remove"><i class="lnr lnr-cross"></i></button>#}
									</div>
								</div>
								<div class='panel-body'>
									<form class="form-auth-small text-left" action="login/registeradmin">
										<input type="hidden" class="form-control" name='id' id="id-edit"  value="{{user.id}}"   >
									    <div class="form-group">
											<label for="signup-nombre" class="control-label title">Nombre</label>
											<input type="text" class="form-control" id="signup-nombre" placeholder="Introduzca su nombre" value="{{user.nombre}}"  name='nombre' >
										</div>
										<div class="form-group">
											<label for="signup-apellidos" class="control-label title">Apellidos</label>
											<input type="text" class="form-control" id="signup-apellidos" placeholder="Introduzca sus apellidos" value="{{user.apellidos}}" name='apellidos'>
										</div>
										<div class="form-group">
											<label for="signup-alias" class="control-label title">Alias</label>
											<input type="text" class="form-control" id="signup-alias" ajax-callBack placeholder="Introduzca su alias" value="{{user.alias}}" name='alias'>
										</div>
										<div class="form-group">
											<label for="signup-direccion" class="control-label title">Direccion</label>
											<input type="text" class="form-control" id="signup-direccion" placeholder="Introduzca su dirección" value="{{user.direccion}}" name='direccion'>
										</div>
										<div class="form-group">
											<label for="signup-email" class="control-label title">Email</label>
											<input type="email" class="form-control" id="signup-email" ajax-callBack placeholder="Email" value="{{user.correo}}" name='correo'>
										</div>
										{#<div class="form-group">#}
										{#	<label for="signup-password2" class="control-label title">Password</label>#}
										{#	<input type="password" class="form-control" id="signup-password2" placeholder="Repita Contraseña" name='clave2'>#}
										{#</div>#}
